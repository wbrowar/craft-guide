{#
  Display Areas:
  elementEdit: An asset, category, entry, or user edit page
  guide: The Guide CP homepage
  page: An individual guide page
  widget: A Dashboard widget
  uiElement: A UI element on an edit page
  uri: A guide added via URI
#}

{% if guides|length or (inlineEditorId ?? false) %}
  {% set guideDisplayArea = guideDisplayArea|default('uri') %}
  {% set displaySlug = 'guide-' ~ (displayId ?? 'display') %}

  {% set guideNav = [] %}
  {% if guides|length %}
    {% for guide in guides %}
      {% if not (teleportMap['id-' ~ guide.id] ?? false) %}
        {% set guideNav = guideNav|merge([{ id: guide.id, slug: guide.slug, title: guide.title }]) %}
      {% endif %}
    {% endfor %}
  {% endif %}

  {% set rootAttributesData = { 'guide-display': displaySlug } %}

  {% if inlineEditorId ?? false %}
    {% set rootAttributesData = rootAttributesData|merge({ 'enable-inline-editor': true }) %}
  {% endif %}
  {% if teleportToSlideout ?? false %}
    {% set rootAttributesData = rootAttributesData|merge({ 'teleport-to-slideout': true }) %}
  {% endif %}
  {% if guideNav|length %}
    {% set rootAttributesData = rootAttributesData|merge({ 'guide-nav-data': guideNav|json_encode }) %}
  {% endif %}
  {% if not guides|length %}
    {% set rootAttributesData = rootAttributesData|merge({ 'start-in-inline-editor': true }) %}
  {% endif %}
  {% if teleportContainerClass ?? false %}
    {% set rootAttributesData = rootAttributesData|merge({ 'teleport-container-class': teleportContainerClass }) %}
  {% endif %}
  {% if teleportMethod ?? false %}
    {% set rootAttributesData = rootAttributesData|merge({ 'teleport-method': teleportMethod }) %}
  {% endif %}
  {% if teleportSelector ?? false %}
    {% set rootAttributesData = rootAttributesData|merge({ 'teleport-selector': teleportSelector }) %}
  {% endif %}

  {% set rootAttributes = {
    data: rootAttributesData,
  } %}

  <div{{ attr(rootAttributes) }}>{{ placeholderText|default('') }}</div>
  <template id="{{ displaySlug }}">
    <teleport to="#page-title" v-if="guideDisplay === 'guide-page' && teleportToSlideout">
      <button class="btn" @click="openSlideout" type="button"><svg-guide class="g-mr-0.5 g-h-5 g-w-4"></svg-guide><span>{{ 'Guide'|t('guide') }}</span></button>
    </teleport>
    <teleport :to="teleportTarget" :disabled="!teleportTarget" v-if="renderDisplay">
      <div{% if guideNav|length > 1 %} class="g-grid g-grid-cols-[var(--grid-cols)] g-items-start g-gap-6 g-relative" style="--grid-cols: 1fr 200px;"{% endif %}>
        {% if inlineEditorId ?? false %}<placement-inline-editor placement-inline-editor="{{ inlineEditorId }}"{% if placementId ?? false %} placement-id="{{ placementId }}"{% endif %} v-if="showInlineEditor"></placement-inline-editor>{% endif %}
        <div{% if inlineEditorId ?? false %} v-else{% endif %}>
          {% if guides|length %}
            {% for guide in guides %}
              {% set vueBoolean1 = "data['" ~ guide.slug ~ "'].boolean1" %}
              {% set vueBoolean2 = "data['" ~ guide.slug ~ "'].boolean2" %}
              {% set vueBoolean3 = "data['" ~ guide.slug ~ "'].boolean3" %}
              {% set vueBoolean4 = "data['" ~ guide.slug ~ "'].boolean4" %}
              {% set vueBoolean5 = "data['" ~ guide.slug ~ "'].boolean5" %}
              {% set vueNumber1 = "data['" ~ guide.slug ~ "'].number1" %}
              {% set vueNumber2 = "data['" ~ guide.slug ~ "'].number2" %}
              {% set vueNumber3 = "data['" ~ guide.slug ~ "'].number3" %}
              {% set vueNumber4 = "data['" ~ guide.slug ~ "'].number4" %}
              {% set vueNumber5 = "data['" ~ guide.slug ~ "'].number5" %}
              {% set vueString1 = "data['" ~ guide.slug ~ "'].string1" %}
              {% set vueString2 = "data['" ~ guide.slug ~ "'].string2" %}
              {% set vueString3 = "data['" ~ guide.slug ~ "'].string3" %}
              {% set vueString4 = "data['" ~ guide.slug ~ "'].string4" %}
              {% set vueString5 = "data['" ~ guide.slug ~ "'].string5" %}
              {% if teleportMap['id-' ~ guide.id] ?? false %}<teleport to="{{ teleportMap['id-' ~ guide.id] }}">{% endif %}
              <section class="guide guide-{{ guide.slug }} g-relative" :class="showTldr ? 'guide-tldr' : null" {% if not (teleportMap['id-' ~ guide.id] ?? false) and (guideNav|length > 1) %}v-if="currentGuide === '{{ guide.slug }}'"{% endif %}>
                <div class="guide-edit-button g-ml-3 g-space-x-1 g-duration-150" v-if="enableInlineEditor || enableTldr">
                  <button class="btn small g-duration-150" :class="showTldr ? 'submit' : null" type="button" title="Hide some of the content in this guide to read a summarized version." @click="showTldr ? toggleTldr(false) : toggleTldr(true)" v-if="enableTldr">{{ 'TL;DR'|t('guide') }}</button>
                  <button class="btn small g-duration-150" type="button" title="Select a new guide for this area." @click="showInlineEditor = true" v-if="enableInlineEditor && userOperations.useOrganizer"><svg-settings class="g-h-4 g-w-4"></svg-settings></button>
                </div>
                {{ include('guide/_partials/render_content', { guide: guide }) }}
              </section>
              {% if teleportMap['id-' ~ guide.id] ?? false %}</teleport>{% endif %}
            {% endfor %}
          {% endif %}
        </div>
        {% if guideNav|length > 1 %}
          <div class="g-sticky" :class="teleportToSlideout ? 'g-top-0' : 'g-top-16'">
            <h2>{{ 'Guides'|t('guide') }}</h2>
            <div class="g-space-y-2">
              {% for link in guideNav %}
                <button class="g-block g-text-left g-text-sm g-cursor-pointer g-duration-150" :class="{ 'g-font-bold g-text-primary': currentGuide === '{{ link.slug }}' }" type="button" @click="currentGuide = '{{ link.slug }}'">{{ link.title }}</button>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>
    </teleport>
  </template>
{% endif %}
