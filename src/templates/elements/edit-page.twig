{% set teleportMethod = teleportMethod ?? 'slideout' %}

{% if guides|length %}
  {% include 'guide/_partials/guide_display.twig' with {
    guideDisplayArea: 'elementEdit',
    displayId: 'page',
    element: element ?? null,
    guides: guides,
    teleportContainerClass: 'content-pane ' ~ (teleportMethod == 'prepend' ? 'g-mb-3' : 'g-mt-3'),
    teleportMap: teleportMap ?? false,
    teleportMethod: teleportMethod,
    teleportSelector: teleportMethod == 'slideout' ? '#guide-slideout' : '#content-container',
  } only %}
{% endif %}
