{% import "_includes/forms" as forms %}

{% set guideOptions = [] %}
{% if selectableGuides|length %}
  {% for item in selectableGuides %}
    {% set guideOptions = guideOptions|merge([{
      value: item.id,
      label: item.title,
    }]) %}
  {% endfor %}

  {{ forms.selectField({
    label: 'Guide'|t('guide'),
    id: 'guideId',
    name: 'guideId',
    options: guideOptions,
    required: true,
    value: widget.guideId,
  }) }}

  {{ forms.lightswitchField({
    label: 'Show Widget Title?'|t('guide'),
    id: 'showTitle',
    name: 'showTitle',
    on: widget.showTitle,
  }) }}
{% else %}
  No guides are available for widgets right now.{% if userOperations.useOrganizer %}
  <a href="{{ url('guide/organizer') }}">Use the Organizer</a> to enable guides for widgets.{% endif %}
  <input type="hidden" name="guideId" value="0">
{% endif %}
