{% extends "_layouts/cp" %}

{# The title of this CP section #}
{% set title = "Guide" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('guide') %}

{% if cpNavPlacements ?? false %}
  {% set guides = craft.guide.getAll({ id: cpNavPlacements|map((item) => item.guideId) }) %}
{% endif %}

{% set content %}
  {% if not (settings.templatePath ?? false) or not (settings.assetVolume ?? false) %}
    {% redirect 'guide/settings/general' %}
  {% elseif guides ?? false %}
    {% include 'guide/_partials/guide_display.twig' with { displayId: 'nav', guides: guides } only %}
  {% elseif userOperations.useOrganizer %}
    {% redirect 'guide/organizer' %}
  {% else %}
    {% redirect 'guide/settings/general' %}
  {% endif %}
{% endset %}
